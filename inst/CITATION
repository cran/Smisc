citHeader("To cite Smisc in publications use:")

citEntry(entry = "Manual",
  title        = "{Smisc: Sego Miscellaneous. A collection of functions for statistical computing and data manipulation in R}",
  author       = personList(as.person("Landon Sego")),
  organization = "{Pacific Northwest National Laboratory}",
  address      = "Richland, WA",
  year         = "2016",
  url          = "https://pnnl.github.io/Smisc",

  textVersion  =
  paste("Sego LH. 2016. Smisc: Sego Miscellaneous. A collection of functions for statistical",
        "computing and data manipulation in R. Pacific Northwest National Laboratory.",
        "https://pnnl.github.io/Smisc.")
)
